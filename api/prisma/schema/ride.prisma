model Ride {
  id               Int                          @id @default(autoincrement())
  user             User                         @relation(fields: [userId], references: [id])
  userId           Int                          
  pickup           String
  dropoff          String
  carType          String
  fare             Float
  status           RideStatus   @default(PENDING)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @default(now())
}

enum RideStatus {
  PENDING
  ACTIVE
  COMPLETED
  CANCELLED
}